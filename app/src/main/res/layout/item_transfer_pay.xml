<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    app:cardCornerRadius="16dp"
    app:contentPadding="1dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/pay_amount_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-$123.45"
                android:textColor="@color/error_red"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pay_currency_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:alpha="0.5"
                android:text="USD"
                android:textSize="26sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/cash"/>

        </LinearLayout>

        <TextView
            android:id="@+id/pay_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Date: 2022-05-04"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pay_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Salary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pay_dest_iban_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="From: XXXX XXXX XXXX XXXX"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
